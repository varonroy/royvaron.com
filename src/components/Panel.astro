---
import { Image } from "astro:assets";

interface Props {
  name: string;
  page: string;
  delay: string;
  image: ImageMetadata;
}

const { name, page, delay, image } = Astro.props;
---

<div class="m-10">
  <a href={page} class="bg-red-100">
    <div
      style={`animation-delay: ${delay}`}
      class={`fade-in-delay panel bg-[url('${image.src}'))]`}
    >
      <Image src={image} alt={name} class:list={"w-96"} />
      <div class="panel-bg"></div>
      <div style="pointer-events: none;" class="text-white full-center">
        <p>{name}</p>
      </div>
    </div>
  </a>
</div>
