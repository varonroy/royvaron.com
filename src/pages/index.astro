---
import Layout from "../layouts/Layout.astro";
import Panel from "../components/Panel.astro";

import Ai from "../res/ai.png";
import Code from "../res/code.png";
import Tom from "../res/tom.jpg";
import { globals } from "../components/Globals.astro";

const panels = [];

panels.push(
  {
    page: "./ai",
    name: "AI",
    hover_color: "bg-red-200",
    image: Ai,
  },
  {
    page: "./software",
    name: "Software & Algorithms",
    hover_color: "bg-green-600",
    image: Code,
  },
  {
    page: "./about",
    name: "About",
    hover_color: "bg-green-600",
    image: Tom,
  }
);
---

<Layout title="Roy Varon">
  <div style="z-index: -1;" class="index-bg flex justify-center absolute"></div>

  <div class="flex h-screen py-10">
    <div class="m-auto top-1/2 left-1/2">
      <div class="main-page-text-group fade-in-delay">
        <p class="main-page-title">Roy Varon Weinryb</p>
        <div class="m-4">
          <a href="mailto:varonroy@gmail.com" class="main-page-link"
            >varonroy@gmail.com</a
          >
        </div>
        <div class="m-4">
          <a href="https://github.com/varonroy" class="main-page-link">github</a
          >
        </div>

        <div class="m-4">
          <a href="https://www.linkedin.com/feed/" class="main-page-link"
            >linkedin</a
          >
        </div>

        <div class="m-4">
          <a href="/res/resume.pdf" class="main-page-link">resume</a>
        </div>
      </div>

      <div class="flex flex-col lg:flex-row justify-center">
        {
          panels.map((panel, idx) => (
            <Panel
              {...panel}
              delay={` ${globals.initialDelay + idx * globals.delay}ms`}
            />
          ))
        }
      </div>
    </div>
  </div>
</Layout>
